{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Chinas's daily cases",
    "title": {
      "text": "China's Daily Covid cases",
      "subtitle": "Data from JHU",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/JordanWData/JordanWData.github.io/main/coviddata_China_daily.json"
    },
    "height": 300,
    "width": 400,
    "mark": {
      "type": "line",
      "point": false,
      "interpolate": "linear",
      "color": "orange"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": null,
          "grid": false,
          "labelSeparation": 0,
          "ticks": false
        }
      },
      "y": {
        "field": "confirmed_daily",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}
      },
      "tooltip": [
        {"field": "date", "title": "Date", "type": "temporal"},
        {"field": "confirmed_daily", "title": "Daily Cases" }
      ]
    }
    
}

